<%= form_tag session_path, method: 'post' do %>
  <h2>Login</h2>

  <ul>
    <li>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </li>

    <li>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </li>

    <li>
      <%= submit_tag "Login" %>
    </li>
  </ul>
<% end %>
